<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMG"
        android:id="@+id/button_emg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickEMG" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECG"
        android:id="@+id/button_ecg"
        android:layout_below="@+id/button_emg"
        android:layout_alignLeft="@+id/button_emg"
        android:layout_alignStart="@+id/button_emg"
        android:layout_alignRight="@+id/button_emg"
        android:layout_alignEnd="@+id/button_emg"
        android:onClick="onClickECG" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDA"
        android:id="@+id/button_eda"
        android:layout_below="@+id/button_ecg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickEDA" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EEG"
        android:id="@+id/button_eeg"
        android:layout_below="@+id/button_eda"
        android:layout_alignLeft="@+id/button_eda"
        android:layout_alignStart="@+id/button_eda"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickEEG" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACC"
        android:id="@+id/button_acc"
        android:layout_below="@+id/button_eeg"
        android:layout_alignLeft="@+id/button_eeg"
        android:layout_alignStart="@+id/button_eeg"
        android:layout_alignRight="@+id/button_eeg"
        android:layout_alignEnd="@+id/button_eeg"
        android:onClick="onClickACC" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LUX"
        android:id="@+id/button_lux"
        android:layout_below="@+id/button_acc"
        android:layout_alignLeft="@+id/button_acc"
        android:layout_alignStart="@+id/button_acc"
        android:layout_alignRight="@+id/button_acc"
        android:layout_alignEnd="@+id/button_acc"
        android:onClick="onClickLUX"/>
</RelativeLayout>
