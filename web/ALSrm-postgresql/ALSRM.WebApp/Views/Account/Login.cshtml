@using ALSRM.WebApp.Resources
@model ALSRM.WebApp.Models.LoginViewModel
@{
    ViewBag.Title = LoginResources.ALSRMLogin;
}

<div class="row">
    <div class="col-md-6 col-md-offset-3 jumbotron">
        <h2 align="center" style="vertical-align: text-top">
            <span><img src="~/Content/Images/login.png" title="Log In" width="24"></span>@ViewBag.Title
        </h2>
        <hr style="border: none"/>
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new {ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                <h6 style="color: Red; font-weight: bold;">@ViewBag.Error</h6>
                <div align="center" class="input-group">
                    <span align="center" class="input-group-addon"><img src="~/Content/Images/user.png" title=@LoginResources.UserId width="24"></span>
                    <div align="center">
                        @Html.TextBoxFor(m => m.UserId, new {@class = "form-control", placeholder = LoginResources.UserId})
                        @Html.ValidationMessageFor(m => m.UserId, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div align="center" class="input-group">
                    <span align="center" class="input-group-addon"><img src="~/Content/Images/lock.png" title="Password" width="24"></span>
                    <div align="center">
                        @Html.PasswordFor(m => m.Password, new {@class = "form-control", placeholder = LoginResources.Password})
                        @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                    </div>
                </div>
                <hr style="border: none"/>
                <div align="center">
                    <input type="submit" value=@LoginResources.Login class="btn btn-primary"/>
                </div>
                <div align="left">
                    <p style="font-size: small">
                        @Html.ActionLink(LoginResources.ForgotPassword, "ResetPassword", "Account", null, new {style = "color:black;"})
                    </p>
                </div>
                @* Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@
            }
        </section>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}