@using ALSRM.WebApp.Resources
@model ALSRM.WebApp.Models.ChangeSecuritAnswerModel
@{
    ViewBag.Title = ChangeSecurityAnswerResources.ChangeSecurityAnswer;
}

<div class="row">
    <div class="col-md-7 col-md-offset-3 jumbotron">
        <h2 align="center" style="vertical-align: text-top">
            <span><img src="~/Content/Images/security_question.png" title="Log In" width="30"></span>@ViewBag.Title
        </h2>
        <hr style="border: none"/>
        <section id="loginForm">
            @using (Html.BeginForm("ChangeSecurityAnswer", "Account", new {ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                <h6 style="color: Red; font-weight: bold;">@ViewBag.Error</h6>
                <h6 style="color: Green; font-weight: bold;">@ViewBag.Message</h6>
                <div align="center" class="input-group">
                    <span align="center" class="input-group-addon"><img src="~/Content/Images/question.png" title="Security Question" width="24"></span>
                    <div class="col-md-10">
                        @Html.DropDownList("SecurityQuestion", null, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.SecurityQuestion, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div align="center" class="input-group">
                    <span align="center" class="input-group-addon"><img src="~/Content/Images/lock.png" title="Security Answer" width="24"></span>
                    <div align="center">
                        @Html.PasswordFor(m => m.SecurityAnswer, new {@class = "form-control", placeholder = AccountResources.SecurityAnswer})
                        @Html.ValidationMessageFor(m => m.SecurityAnswer, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div align="center" class="input-group">
                    <span align="center" class="input-group-addon"><img src="~/Content/Images/lock.png" title="Password" width="24"></span>
                    <div align="center">
                        @Html.PasswordFor(m => m.Password, new {@class = "form-control", placeholder = AccountResources.Password})
                        @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                    </div>
                </div>
                <hr style="border: none"/>
                <div align="center">
                    <input type="submit" value=@ChangeSecurityAnswerResources.Save class="btn btn-primary"/>
                </div>
            }
        </section>
        <div>
            @Html.ActionLink(CreatePatientResources.Back, null, null, null, new {href = Request.UrlReferrer})
        </div>
    </div>
</div>