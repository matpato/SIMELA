@using ALSRM.WebApp.Resources
@using ALSRM.WebApp.Security
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/sharedfuncitons.js"></script>
    <script src="~/Scripts/jquery-1.12.3.js"></script>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="navbar-brand">
                <a href="@Url.Action("About", "Home")">
                    <img src="~/Content/Images/logo-alsrm.png" title="Logo" width="85">
                </a>
            </div>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="wrapper-center">
                    <a>
                        <img src="~/Content/Images/home-white.png" title="Home" width="24">
                        @Html.ActionLink(HomeResources.Home, "Index", "Home")
                    </a>
                </li>
                <li class="wrapper-center">
                    <a>
                        <img src="~/Content/Images/examsignal-white.png" title="Exams" width="24">
                        @Html.ActionLink(HomeResources.Exams, "Index", "Exams")
                    </a>
                </li>
               @if (SessionPresister.Role != null && SessionPresister.Role.Equals("Doctor")) { 
                    <li class="wrapper-center">
                        <a>
                            <img src="~/Content/Images/users.png" title="Users" width="24">
                            @Html.ActionLink(UserResources.Users, "Index", "Users")
                        </a>
                    </li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>
            &copy; @DateTime.Now.Year - <a href="mailto:tiago_bogalho@hotmail.com">Tiago Bogalho</a> & <a href="mailto:nunomales@gmail.com">Nuno Malés</a>
        </p>
    </footer>
</div>
@RenderSection("scripts", false)
</body>
</html>