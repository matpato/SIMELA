@model ALSRM.WebApp.Models.ResetPasswordModel
@{
    ViewBag.Title = @ALSRM.WebApp.Resources.RecoveryPasswordResources.PasswordRecovery;
}

<div class="row">
    <div class="col-md-6 col-md-offset-3 jumbotron">
        <h2 align="center" style="vertical-align: text-top">
            <span><img src="~/Content/Images/lock.png" title="Password Recovery" width="24"></span>@ViewBag.Title
        </h2>
        <hr style="border: none"/>
        <section id="loginForm">
            @using (Html.BeginForm("ResetPassword", "Account", new {ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                <h6 style="color: Red; font-weight: bold;">@ViewBag.Error</h6>
                <h6 style="color: Green; font-weight: bold;">@ViewBag.NewPassword</h6>
                <div align="center" class="input-group">
                    <span align="center" class="input-group-addon"><img src="~/Content/Images/user.png" title="User Name" width="24"></span>
                    <div align="center">
                        @Html.TextBoxFor(m => m.Id, new {@class = "form-control", placeholder = @ALSRM.WebApp.Resources.RecoveryPasswordResources.UserID })
                        @Html.ValidationMessageFor(m => m.Id, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div align="center" class="input-group">
                    <span align="center" class="input-group-addon"><img src="~/Content/Images/question.png" title="Security answer" width="24"></span>
                    <div align="center">
                        @Html.PasswordFor(m => m.SecurityAnswer, new {@class = "form-control", placeholder = @ALSRM.WebApp.Resources.RecoveryPasswordResources.SecurityAnswer })
                        @Html.ValidationMessageFor(m => m.SecurityAnswer, "", new {@class = "text-danger"})
                    </div>
                </div>
                <hr style="border: none"/>
                <div align="center">
                    <input type="submit" value=@ALSRM.WebApp.Resources.RecoveryPasswordResources.Recovery class="btn btn-primary"/>
                </div>
            }
        </section>
    </div>
</div>