@using ALSRM.WebApp.Resources
@model ALSRM.WebApp.Models.GetRegisterViewModel
@{
    ViewBag.Title = CreatePatientResources.Register;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()
    <h4>@CreatePatientResources.CreateNewAccount</h4>
    <hr/>
    @Html.ValidationSummary("", new {@class = "text-danger"})
    <h6 style="color: Red; font-weight: bold;">@ViewBag.Error</h6>
    <div class="form-group">
        <label class="col-md-2 control-label">@AccountResources.UserName</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">@AccountResources.PatientId</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PatientId, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">@AccountResources.MacBitAlino</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Mac_Bitalino, new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value=@CreatePatientResources.Register />
        </div>
    </div>
}

<div>
    @Html.ActionLink(CreatePatientResources.Back, null, null, null, new {href = Request.UrlReferrer})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}