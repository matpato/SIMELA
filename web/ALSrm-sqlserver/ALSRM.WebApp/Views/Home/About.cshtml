@using ALSRM.WebApp.Resources
@{
    ViewBag.Title = AboutResources.About;
}
<h2>@ViewBag.Title</h2>

<div class="container">
    <div class="jumbotron col-md-12">
        <div class="col-md-8">
            <h2>@AboutResources.Ela</h2>
            <p></p>
            <div style="text-align: justify; text-justify: inter-word">
                @Html.Raw(AboutResources.ElaText)
            </div>
        </div>
        <div class="col-md-4">
            <img style="display: block; margin: 0 auto; margin-left: auto; margin-right: auto;" width="250" src="~/Content/Images/ela.jpg"/>
        </div>
    </div>
    <div>
        <img style="display: block; margin: 0 auto; margin-left: auto; margin-right: auto;" width="40" src="~/Content/Images/examsignal.png"/>
    </div>
    <div class="jumbotron col-md-12" style="background: white">

        <div class="col-md-8">
            <h2>@AboutResources.MobileApp</h2>
            <p></p>
            <div style="text-align: justify; text-justify: inter-word">
                @Html.Raw(AboutResources.AppMobileText)
            </div>
        </div>
        <div class="col-md-4">
            <img style="display: block; margin: 0 auto; margin-left: auto; margin-right: auto;" width="100" height="150" src="~/Content/Images/mobile.png"/>
            <img style="display: block; margin: 0 auto; margin-left: auto; margin-right: auto;" width="40" src="~/Content/Images/bluetooth.png"/>
            <img style="display: block; margin: 0 auto; margin-left: auto; margin-right: auto;" width="120" src="~/Content/Images/biosignal.png"/>
        </div>
    </div>
    <div>
        <img style="display: block; margin: 0 auto; margin-left: auto; margin-right: auto;" width="40" src="~/Content/Images/examsignal.png"/>
    </div>
    <div class="jumbotron col-md-12">
        <div class="col-md-8">
            <h2>@AboutResources.WebApi</h2>
            <p></p>
            <div style="text-align: justify; text-justify: inter-word">
                @Html.Raw(AboutResources.WebApiText)
            </div>
        </div>
        <div class="col-md-4">
            <img style="display: block; margin: 0 auto; margin-left: auto; margin-right: auto;" width="180" src="~/Content/Images/api.png"/>
        </div>
    </div>
    <div>
        <img style="display: block; margin: 0 auto; margin-left: auto; margin-right: auto;" width="40" src="~/Content/Images/examsignal.png"/>
    </div>
    <div class="jumbotron col-md-12" style="background: white">

        <div class="col-md-8">
            <h2>@AboutResources.WebApp</h2>
            <p></p>
            <div style="text-align: justify; text-justify: inter-word">
                @Html.Raw(AboutResources.AppWebText)
            </div>
        </div>
        <div class="col-md-4">
            <img style="display: block; margin: 0 auto; margin-left: auto; margin-right: auto;" width="150" src="~/Content/Images/pc_user.png"/>
            <img style="display: block; margin: 0 auto; margin-left: auto; margin-right: auto;" width="150" src="~/Content/Images/pc_doctor.png"/>
        </div>
    </div>
</div>